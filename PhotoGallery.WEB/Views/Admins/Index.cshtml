@model IEnumerable<PhotoGalleryAuthentication.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

@{
    Layout = "_AdminLayout";
}

<style>
    body {
         background: #000000; /* Цвет фона */
         color: #fc0; /* Цвет текста */
    }
     td {
        color: #fc0;
     }
      th {
        color: #fc0;
      }
</style>
<p></p>
<a asp-action="Create" class="btn btn-sm btn-primary">Add new admin</a>
<p></p>
<body>
    <table class="table">
        <tr><th>Email</th><th>Year</th><th></th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Year</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Change</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div>
        <a asp-action="AdminPage" asp-controller="Account">Back to Admin Page </a>
    </div>
</body>




