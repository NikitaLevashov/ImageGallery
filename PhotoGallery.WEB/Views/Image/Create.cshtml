@model PhotoGallery.DAL.Models.PhotoDAL
@using PhotoGallery.DAL.Models

@{ ViewData["Title"] = "Create"; }

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class=checkbox checkboxlist col-sm-9">
                @foreach (var c in ViewBag.Courses)
                 {
                    <input type="checkbox" name="selectedCourses" value="@c.Id"
                           @(Model.Genres.Contains(c) ? "checked=\"checked\"" : "") />@c.Name <br />
                 }

                <p>
                    <input type="submit" value="Сохранить" />
                </p>
            </div>
            @*<ul>
                @for (var i = 0; i < Model.Genres.Count; i++)
                {
                    <li>
                        <input type="checkbox" asp-for="@Model.Genres[i].Id" />
                        <label asp-for="@Model.Genres[i].Id">@Model.Genres[i].Name</label>
                        <input type="hidden" asp-for="@Model.Genres[i].Id" />
                        <input type="hidden" asp-for="@Model.Genres[i].Name" />
                    </li>
                }
            </ul>*@
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

